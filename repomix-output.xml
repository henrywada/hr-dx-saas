export function AddEmployeeDialog() {
    const [open, setOpen] = useState(false);
    const [state, formAction, isPending] = useActionState(addEmployee, null);

    // 成功時にダイアログを閉じる
    useEffect(() => {
        if (state?.success) {
            setOpen(false);
        }
    }, [state?.success]);

    return (
