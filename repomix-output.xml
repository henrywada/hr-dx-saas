-- divisionsテーブルの作成
-- 組織の階層構造を管理するためのテーブル

create table if not exists public.divisions (
  id uuid not null default gen_random_uuid(),
  tenant_id uuid not null references public.tenants(id) on delete cascade,
  parent_id uuid references public.divisions(id) on delete restrict, -- 親部署。NULLの場合はルート
  name text not null, -- 部署名
  code text, -- 部署コード (外部連携用)
  layer integer not null default 1, -- 階層レベル (1: 本部/支社, 2: 部, 3: 課 など)
  created_at timestamp with time zone not null default now(),
  updated_at timestamp with time zone not null default now(),

  constraint divisions_pkey primary key (id),
  constraint divisions_tenant_id_name_key unique (tenant_id, name)
);

-- カラムコメントの追加
comment on table public.divisions is '組織情報（部署）を管理するテーブル';
comment on column public.divisions.id is '部署ID (UUID)';
comment on column public.divisions.tenant_id is 'テナントID';
comment on column public.divisions.parent_id is '親部署ID (NULLの場合はルート組織)';
comment on column public.divisions.name is '部署名';
comment on column public.divisions.code is '部署コード (外部システム連携用)';
comment on column public.divisions.layer is '階層レベル (1:本社/支社, 2:部, 3:課)';
comment on column public.divisions.created_at is '作成日時';
comment on column public.divisions.updated_at is '更新日時';

-- RLS (Row Level Security) の有効化
alter table public.divisions enable row level security;

-- ポリシー作成: 自分のテナントのデータのみ参照可能
create policy "Users can view divisions of their own tenant"
on public.divisions for select
to authenticated
using (
  tenant_id = (
    select tenant_id from public.employees
    where employees.id = auth.uid()
  )
);

create policy "Users can insert divisions into their own tenant"
on public.divisions for insert
to authenticated
with check (
  tenant_id = (
    select tenant_id from public.employees
    where employees.id = auth.uid()
  )
);

create policy "Users can update divisions of their own tenant"
on public.divisions for update
to authenticated
using (
    tenant_id = (
        select tenant_id from public.employees
        where employees.id = auth.uid()
    )
);

create policy "Users can delete divisions of their own tenant"
on public.divisions for delete
to authenticated
using (
    tenant_id = (
        select tenant_id from public.employees
        where employees.id = auth.uid()
    )
);

-- サンプルデータの挿入 (検証用)
do $$
declare
  target_tenant_id uuid;
  tokyo_id uuid;
  osaka_id uuid;
begin
  -- 最初のテナントIDを取得
  select tenant_id into target_tenant_id from public.employees limit 1;

  if target_tenant_id is not null then
    -- Level 1: 東京本社
    insert into public.divisions (tenant_id, name, code, layer)
    values (target_tenant_id, '東京本社', 'HQ_TOKYO', 1)
    on conflict (tenant_id, name) do nothing
    returning id into tokyo_id;

    -- Level 1: 大阪支社
    insert into public.divisions (tenant_id, name, code, layer)
    values (target_tenant_id, '大阪支社', 'BR_OSAKA', 1)
    on conflict (tenant_id, name) do nothing
    returning id into osaka_id;

    if tokyo_id is null then
        select id into tokyo_id from public.divisions where tenant_id = target_tenant_id and name = '東京本社';
    end if;

    if osaka_id is null then
        select id into osaka_id from public.divisions where tenant_id = target_tenant_id and name = '大阪支社';
    end if;

    -- Level 2: 東京本社配下
    if tokyo_id is not null then
        insert into public.divisions (tenant_id, parent_id, name, code, layer)
        values
          (target_tenant_id, tokyo_id, '営業部', 'SALES_HQ', 2),
          (target_tenant_id, tokyo_id, '開発部', 'DEV_HQ', 2)
        on conflict (tenant_id, name) do nothing;
    end if;

    -- Level 2: 大阪支社配下
    if osaka_id is not null then
        insert into public.divisions (tenant_id, parent_id, name, code, layer)
        values
          (target_tenant_id, osaka_id, '大阪営業部', 'SALES_OSAKA', 2)
        on conflict (tenant_id, name) do nothing;
    end if;

  end if;
end $$;
