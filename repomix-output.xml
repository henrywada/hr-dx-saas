    [ROLES.DEVELOPER]: "開発者",
};

export const getRoleLabel = (role: string | null | undefined): string => {
    if (!role) return "";
    // Check if role is a valid Role, otherwise return the original string or empty
    const label = ROLE_LABELS[role as Role];
    return label || role;
