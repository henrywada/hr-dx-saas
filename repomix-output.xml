    className?: string;
    setOpen?: (open: boolean) => void;
    email?: string; // ★追加
}

// 管理者のメールアドレス（layout.tsxと同じものにする）
const ALLOWED_ADMIN_EMAIL = "wada007@gmail.com";

export function DashboardNav({ className, setOpen, email }: DashboardNavProps) {
