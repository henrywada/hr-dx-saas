        body: JSON.stringify(payload),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || '診断に失敗しました');
      }

      // --- 修正はここまで ---

      setResult(data);

    } catch (err) {
      console.error(err);
      setError("診断中にエラーが発生しました。しばらく経ってから再度お試しください。");
